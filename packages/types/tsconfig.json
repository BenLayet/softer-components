{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "baseUrl": ".",
    "declaration": true,
    "strict": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
