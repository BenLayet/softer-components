{
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.tmp/tsconfig.tsbuildinfo",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "paths": {
      "@softer-components/types": ["../types/src"],
      "@softer-components/utils": ["../utils/src"]
    }
  },
  "include": ["src/**/*"]
}
